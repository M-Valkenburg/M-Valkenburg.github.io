	width: 100%;
	max-width: 800px;
	display: flex;
	flex-wrap: wrap;
	justify-content: space-evenly;
	row-gap: 20px;
	margin-top: 30px;
}

.emp {
	height: 335px;
	width: 254px;
	background-color: #ffc500;
	text-align: center;
}

.emp img {
	width: 250px;
	height: auto;
	margin: 2px;
}

@media only screen and (max-width: 800px) and (orientation: portrait) {
	.emp {
		height: 285px;
		width: 204px;
	}
	
	.emp img {
		width: 200px;
		height: auto;
	}
