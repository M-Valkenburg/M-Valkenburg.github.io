/* ==== MAIN STYLES ==== */

* {
	margin: 0;
	padding: 0;
	box-sizing: border-box;
	scroll-behavior: smooth;
}

body {
	font-family: 'Arima Madurai', cursive;
	background-color: #e1d5ba;
}

h1 {
	font-family: 'Kaushan Script', cursive;
	font-size: 48px;
	color: #ff4f00;
}

h2 {
	font-family: 'Indie Flower', cursive;
	font-size: 32px;
	color: #080042;
	letter-spacing: 1px;
}

p {
	font-size: 18px;
	text-align: justify;
}

a {
	text-decoration: none;
	color: #080042;
}

i {
	color: #ff4f00;
}

span {
	font-size: 20px;
	font-weight: bold;
	margin: 30px auto;
}

hr {
	width: 100%;
	background: #080042;
	height: 5px;
}


/* ==== NAVIGATION ==== */

header {
	width: 100%;
	display: flex;
	justify-content: center;
}

nav {
	position: fixed;
	z-index: 10;
	background-color: #080042;
	opacity: .9;
	height: 40px;
	width: 100%;
	max-width: 1200px;
	border-radius: 0 0 10px 10px;
	box-shadow: 0 0 8px #000000;
	text-align: center;
}

nav li {
	display: inline-block;
	margin: 5px 10px;
}

nav a {
	font-size: 1.2rem;
	color: #ffc500;
	text-decoration: none;
}


/* ==== BANNER ==== */

.banner {
	height: 600px;
	width: 100%;
	background-image: url("images/banner-image.jpg");
	background-size: cover;
	background-position: 0 20%;
	background-repeat: no-repeat;
	display: flex;
	flex-direction: column;
	align-items: center;
}

.banner img {
	position: relative;
	top: 7%;
	width: 100%;
	max-width: 740px;
	margin: 0 10px;
}

.banner h2 {
	position: relative;
	text-align: center;
	background-color: #ffc500;
	opacity: .8;
	width: 100%;
	top: 50px;
	padding: 5px 0;
}

@media only screen and (max-width: 768px) and (orientation: portrait) {
	.banner h2 {
		top: 150px;
	}
}


/* ==== ABOUT==== */

.about {
	display: flex;
	flex-direction: column;
	align-content: center;
	width: 100%;
	max-width: 800px;
	margin: 0 auto;
	padding: 40px 0;
}

.about h1,
.about p {
	padding: 10px 15px;
}

.book {
	height: 200px;
	margin: 50px 0 0;
	background-image: url("images/hotels.jpg");
	background-size: cover;
	background-position: bottom;
	background-repeat: no-repeat;
	align-items: center;
	display: flex;
	justify-content: center;
	align-items: center;
}

.book h2 {
	text-align: center;
	font-size: 64px;
}

@media only screen and (max-width: 768px) and (orientation: portrait) {
	.book img {
		border-radius: 0;
	}
}


/* ==== THEME PARKS ==== */

.theme-parks {
	display: flex;
	flex-direction: column;
	align-content: center;
	width: 100%;
	max-width: 800px;
	margin: 0 auto;
	padding: 40px 0;
}

.theme-parks h1,
.theme-parks p {
	padding: 10px 15px;
}

.attr-container {
	width: 100%;
	max-width: 800px;
	display: flex;
	flex-wrap: wrap;
	justify-content: space-evenly;
	row-gap: 20px;
	margin-top: 30px;
}

.attr {
	height: 300px;
	width: 254px;
	background-color: #ffc500;
	text-align: center;
}

.attr img {
	width: 250px;
	height: auto;
	margin: 2px;
}

@media only screen and (max-width: 800px) and (orientation: portrait) {
	.attr {
		height: 250px;
		width: 204px;
}
	
	.attr img {
		width: 200px;
		height: auto;
	}
}


/* ==== NATURE ==== */

