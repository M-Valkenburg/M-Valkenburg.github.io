/* ==== CONTACT ==== */

.contact {
	display: flex;
	flex-direction: column;
	align-content: center;
	width: 100%;
	max-width: 800px;
	margin: 0 auto;
	padding: 40px 0;
}

.contact h1,
.contact p {
	padding: 10px 15px;
}

.contact p {
	text-align: center !important;
}

.contact a {
	font-size: 18px;
	padding: 5px 15px;
}

.opt-container {
	width: 100%;
	max-width: 800px;
	display: flex;
	flex-wrap: wrap;
	justify-content: space-evenly;
	row-gap: 20px;
	margin-top: 30px;
}

.opt {
	height: 190px;
	width: 350px;
	display: flex;
	flex-direction: column;
	align-items: center;
	text-align: center;
	padding-top: 10px;
	border: 2px solid #080042;
}

@media only screen and (max-width: 800px) and (orientation: portrait) {
	.opt {
		width: 300px;
	}
}

@media only screen and (max-width: 610px) and (orientation: portrait) {
	.opt {
		width: 204px;
	}
}


/* ==== FOOTER ==== */

footer {
	width: 100%;
	background-color: #ffc500;
	display: flex;
	justify-content: center;
	padding: 5px;
}

footer p {
	font-weight: bold;
	font-size: 14px;
}